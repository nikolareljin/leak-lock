<UserControl x:Class="LeakLock.VSExtension.LeakLockToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
            <TextBlock Text="Leak Lock" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="  â€“ Secret scanner and BFG cleanup" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Dependency and directory actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
            <Button Content="Install Dependencies" Width="160" Click="InstallDeps_Click"/>
            <Button Content="Select Directory" Width="140" Click="SelectDir_Click"/>
            <TextBlock Text="Directory:" VerticalAlignment="Center"/>
            <TextBox x:Name="DirectoryText" Width="380" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <Button Content="Scan" Width="100" Click="Scan_Click"/>
        </StackPanel>

        <!-- Results grid -->
        <DataGrid x:Name="ResultsGrid" Grid.Row="2" Margin="0,8,0,8"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  MouseDoubleClick="ResultsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RuleName}" Header="Type" Width="2*"/>
                <DataGridTextColumn Binding="{Binding FilePath}" Header="File" Width="4*"/>
                <DataGridTextColumn Binding="{Binding Line}" Header="Line" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Preview}" Header="Preview" Width="4*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Open File" Width="100" Click="OpenFile_Click"/>
            <Button Content="Run BFG + Cleanup" Width="160" Click="RunBfg_Click"/>
        </StackPanel>

        <!-- Status -->
        <Border Background="#1e1e1e" CornerRadius="4" Opacity="0.9" Padding="6" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,0,0,0" Visibility="Collapsed" x:Name="StatusArea"/>
    </Grid>
</UserControl>

